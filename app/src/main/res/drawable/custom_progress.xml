<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Непройденная часть -->
    <!-- Пройденная часть -->    <item android:id="@android:id/background">
    <shape android:shape="rectangle">
        <corners android:radius="5dp" /> <!-- Скругление краёв -->
        <size android:height="10dp" /> <!-- Высота непройденной части -->
        <solid android:color="#B3AAAAAA"/>
    </shape>
</item>

    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="10dp" /> <!-- Скругление краёв -->
                <size android:height="5dp" /> <!-- Высота пройденной части -->
                <solid android:color="@color/white" />
            </shape>
        </clip>
    </item>
</layer-list>
