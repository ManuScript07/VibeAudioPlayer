<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Светлая тема -->
    <style name="Theme.VibeAudioPlayer" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Основные цвета -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>

        <!-- Фон и текст -->
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/grey</item>

        <!-- Статус-бар и навигация -->
        <item name="android:statusBarColor">@color/purple_500</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowTranslucentNavigation">false</item>


    </style>

    <!-- Тёмная тема -->
    <style name="Theme.VibeAudioPlayer.Dark" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Основные цвета -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>

        <!-- Фон и текст -->
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/grey</item>

        <!-- Статус-бар и навигация -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/pure_black</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
</resources>
