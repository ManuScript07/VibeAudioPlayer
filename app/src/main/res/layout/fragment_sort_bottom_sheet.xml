<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="top">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сортировать по"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:paddingBottom="8dp"/>

    <ToggleButton
        android:id="@+id/toggleOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="Z-A"
        android:textOn="A-Z"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/purple_500"
        android:checked="true"
        android:background="@android:color/transparent"
        android:layout_marginLeft="10dp"
        />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/radioGroupSort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp">

        <RadioButton
            android:id="@+id/radioSongName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Название песни"
            android:checked="true"
            android:buttonTint="@color/selector_radio_button"/>

        <RadioButton
            android:id="@+id/radioArtistName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Имя артиста"
            android:buttonTint="@color/selector_radio_button"/>

        <RadioButton
            android:id="@+id/radioAlbumName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Название альбома"
            android:buttonTint="@color/selector_radio_button"/>

        <RadioButton
            android:id="@+id/radioAddedTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Время добавления"
            android:buttonTint="@color/selector_radio_button"/>

        <RadioButton
            android:id="@+id/radioDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Длительность"
            android:buttonTint="@color/selector_radio_button"/>

        <RadioButton
            android:id="@+id/radioSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Размер"
            android:buttonTint="@color/selector_radio_button"/>
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:paddingTop="16dp">

        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Отмена"
            android:textColor="@color/white"
            android:background="@drawable/rounded_mini_player"/>

        <Button
            android:id="@+id/buttonOk"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="ОК"
            android:layout_marginStart="8dp"
            android:textColor="@color/white"
            android:background="@drawable/rounded_button_for_bottom"/>
    </LinearLayout>
</LinearLayout>
